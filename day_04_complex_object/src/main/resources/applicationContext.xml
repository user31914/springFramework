<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="connection" class="com.hhit.factory.MyConnectionBean"/>

    <!--实例工厂-->
    <bean id="instanceFactory" class="com.hhit.factory.InstanceFactory"/>
    <bean id="factoryConnection" factory-bean="instanceFactory" factory-method="getConnection"/>

    <!--静态工厂-->
    <bean id="staticConnection" class="com.hhit.factory.StaticFactory" factory-method="getConnection"/>
</beans>